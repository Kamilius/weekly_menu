.container.margin-top-25
  %section.row.calendar-pagination
    .col-xs-1.pull-right.pagination-container
      %button{:'ng-click' => 'prevWeek()'}
        %span.glyphicon.glyphicon-backward
      .current-week {{ "Тиждень №" + currentDate() }}
      %button{:'ng-click' => 'nextWeek()'}
        %span.glyphicon.glyphicon-forward
  %section.row.calendar
    .calendar-days
      .col-xs-1.day-header Понеділок
      .col-xs-1.day-header Вівторок
      .col-xs-1.day-header Середа
      .col-xs-1.day-header Четвер
      .col-xs-1.day-header П'ятниця
      .col-xs-1.day-header Субота
      .col-xs-1.day-header Неділя
    .calendar-recipes
      .day.col-xs-1{:'ng-repeat' => 'day in weeklyMenu', :'ng-class' => '{ today: day.today() }', :'data-day-name' => '{{ day.name }}', :ondragover => "event.preventDefault()"}
        .date {{ day.date | date }}
        .meal.breakfast{:'data-meal-name' => 'breakfast', :'drag-enter-leave-animation' => '', :title => 'Сніданок', :'ng-class' => "{ 'has-spinner': day.isMealInProgress('breakfast')}"}
          .recipe.fade-animation{:'ng-repeat' => 'recipe in day.breakfast track by $index', :'ng-class' => "{ 'has-spinner': processing }"}
            %recipecontrols
            %h5.recipe-title
              {{ recipe.name }}
            %ul.recipe-ingredients
              %li{:'ng-repeat' => 'ing in recipe.ingredients'}
                {{ ing.name }}
        .meal.lunch{:'data-meal-name' => 'lunch', :'drag-enter-leave-animation' => '', :title => 'Обід', :'ng-class' => "{ 'has-spinner': day.isMealInProgress('lunch')}"}
          .recipe.fade-animation{:'ng-repeat' => 'recipe in day.lunch track by $index'}
            %recipecontrols
            %h5.recipe-title
              {{ recipe.name }}
            %ul.recipe-ingredients
              %li{:'ng-repeat' => 'ing in recipe.ingredients'}
                {{ ing.name }}
        .meal.dinner{:'data-meal-name' => 'dinner', :'drag-enter-leave-animation' => '', :title => 'Вечеря', :'ng-class' => "{ 'has-spinner': day.isMealInProgress('dinner')}"}
          .recipe.fade-animation{:'ng-repeat' => 'recipe in day.dinner track by $index'}
            %recipecontrols
            %h5.recipe-title
              {{ recipe.name }}
            %ul.recipe-ingredients
              %li{:'ng-repeat' => 'ing in recipe.ingredients'}
                {{ ing.name }}
